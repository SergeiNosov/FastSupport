@model Dictionary<string, int>

@{
    ViewData["Title"] = "Диалог";

}


<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<h1> count ->  @Html.DisplayName(Model.Count.ToString()) </h1>

<div class="container d-flex justify-content-center">
    <div class="card mt-5">

        <div class="d-flex flex-row justify-content-between p-3 adiv text-white"> <i class="fas fa-chevron-left"></i> <span class="pb-3">Live chat</span> <i class="fas fa-times"></i> </div>

        @foreach (var message in Model)
        {
            @if (message.Value == 1)
            {
                <div class="d-flex flex-row p-3">
                  <div class="bg-white mr-2 p-3"><span class="text-muted">@Html.DisplayName(message.Key)</span></div> <img src="https://img.icons8.com/color/48/000000/circled-user-male-skin-type-7.png" width="40" height="40">
              </div>
            }
            else
            {

            <div class="d-flex flex-row p-2">
                <img src="https://img.icons8.com/color/48/000000/circled-user-female-skin-type-7.png" width="40" height="40">
                <div class="chat ml-2 p-3">@Html.DisplayName(message.Key)</div>
            </div>

              }


            }





        <div class="form-group px-3"> <textarea class="form-control" rows="3" placeholder="Type your message"></textarea> </div>

        <button type="button" class="btn btn-success">Отправить</button>

    </div>


</div>


