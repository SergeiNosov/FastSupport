

@model Dictionary<string, int>

@{
    ViewData["Title"] = "Диалог";

    if(Model.Count == 0)
    {
        Model["Здравствуйте, напишите нам своё обращение сюда или на почту support>gmail.com"] = 0;
    }
}


<html>
<head>
    <link rel="stylesheet" href="~/CSS/messages.css" type="text/css" />
</head>

<body>
    <div class="container d-flex justify-content-center">
        <div class="card mt-5">


            @foreach (var message in Model)
            {
                @if (message.Value == 1)
                {
                    <div class="d-flex flex-row p-3">
                        <div class="bg-white mr-2 p-3"><span class="text-muted">@Html.DisplayName(message.Key)</span></div>
                        <img src="https://img.icons8.com/color/48/000000/circled-user-male-skin-type-7.png" width="40" height="40">
                    </div>
                }
                else
                {

                    <div class="d-flex flex-row p-2">
                        <img src="https://img.icons8.com/color/48/000000/circled-user-female-skin-type-7.png" width="40" height="40">
                        <div class="chat ml-2 p-3">@Html.DisplayName(message.Key)</div>
                    </div>

                }


            }



            <div class="form-group px-3"> <textarea class="form-control" rows="3" placeholder="Type your message"></textarea> </div>




            <button type="button" onclick="location.href='@Url.Action("SendMessage?", "Messages")'" class="btn btn-success">Отправить</button>



        </div>


    </div>

</body>

</html>